{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "build/**"]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["build"]
		}
	}
}
